{
  "name": "flowbeat_player",
  "main": "electron/main.js",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.10",
    "wait-on": "^9.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "start": "cross-env NODE_ENV=development electron .",
    "dev:electron": "concurrently \"bun run dev\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "dev:electron:win": "concurrently \"bun run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "package": "bun run build && electron-builder --dir",
    "dist": "bun run build && electron-builder"
  },
  "build": {
    "appId": "com.flowbeat.player",
    "productName": "FlowBeat",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    }
  }
}